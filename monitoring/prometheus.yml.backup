global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - "alert_rules.yml"

scrape_configs:
  - job_name: 'olla2-app'
    static_configs:
      - targets: ['olla2-app:8000']
    metrics_path: /metrics
    scrape_interval: 10s
    labels:
      service: 'olla2'
      environment: 'production'

  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

alerting:
  alertmanagers:
    - static_configs:
        - targets: []
          # - alertmanager:9093  # Uncomment when Alertmanager is setup
